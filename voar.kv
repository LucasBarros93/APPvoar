#:import utils kivy.utils

#:import get_color_from_hex kivy.utils.get_color_from_hex

#:set text_color get_color_from_hex("#4a4939")
#:set focus_color get_color_from_hex("#e7e4c0")
#:set ripple_color get_color_from_hex("#c5bdd2")
#:set bg_color get_color_from_hex("#f7f4e7")
#:set selected_color get_color_from_hex("#0c6c4d")


<DrawerClickableItem@MDNavigationDrawerItem>
    focus_color: focus_color
    unfocus_color: bg_color
    text_color: text_color
    icon_color: text_color
    ripple_color: ripple_color
    selected_color: selected_color

<DrawerLabelItem@MDNavigationDrawerItem>
    bg_color: bg_color
    text_color: text_color
    icon_color: text_color
    _no_ripple_effect: True

<ContentNavigationDrawer> 
    MDNavigationDrawerMenu:

        MDNavigationDrawerHeader:
            title: "APP Voar"
            title_color: text_color
            text: "frase de efeito foda"
            title_color: text_color
            spacing: "4dp"
            padding: "12dp", 0, 0, "56dp"

        MDNavigationDrawerLabel:
            text: "Drive"

        DrawerClickableItem:
            icon: "google-drive"
            text: "planilha"

        DrawerLabelItem:
            icon: "google-drive"
            text: "sla kkkkkk"

        MDNavigationDrawerDivider:

        MDNavigationDrawerLabel:
            text: "Em Execução"

        DrawerClickableItem:
            icon: "information-outline"
            text: "Ver planos ativos"
            on_press: app.sm.current = "Rotinas"

        DrawerClickableItem:
            icon: "information-outline"
            text: "Excluir planos ativo"



<MySwiper@MDSwiperItem>

    FitImage:
        source: "gato.jpeg"
        radius: [20,]



<TabPreparacao>
    ScrollView:
        MDBoxLayout:
            id: BotoesPrep
            orientation: "vertical"
            padding: 20
            spacing: 10
            size_hint: (1,None)
            height: self.minimum_height
            
            MDRectangleFlatIconButton:
                id: C
                icon: "android"
                text: "Completar Frases Curtas"
                size_hint: None, None
                width: root.width*0.9
                height: root.height*.25
                pos_hint: {"center_x": .5}
                on_press: app.sm.current = "PreparacaoC"

            MDRectangleFlatIconButton:
                id: N
                icon: "android"
                text: "Nomeação de Ação"
                size_hint: None, None
                width: root.width*0.9
                height: root.height*.25
                pos_hint: {"center_x": .5}
                on_press: app.sm.current = "PreparacaoN"
                
            MDRectangleFlatIconButton:
                id: I
                icon: "android"
                text: "Imitação Motora"
                size_hint: None, None
                width: root.width*0.9
                height: root.height*.25
                pos_hint: {"center_x": .5}
                on_press: app.sm.current = "PreparacaoI"



<TabAplicacao>
    ScrollView:
        MDBoxLayout:
            id: BotoesApli
            orientation: "vertical"
            padding: 20
            spacing: 10
            size_hint: (1,None)
            height: self.minimum_height
            
            MDRaisedButton:
                id: C
                disabled: True
                text: "Completar Frases Curtas"
                font_size: "18sp"
                size_hint: None, None
                width: root.width*.9
                height: root.height*.25
                pos_hint: {"center_x": .5}
                on_press: app.sm.current = "AplicacaoC"

            MDRaisedButton:
                id: N
                disabled: True
                text: "Nomeação de Ação"
                font_size: "18sp"
                size_hint: None, None
                width: root.width*.9
                height: root.height*.25
                pos_hint: {"center_x": .5}
                on_press: app.sm.current = "AplicacaoN"
                
            MDRaisedButton:
                id: I
                disabled: True
                text: "Imitação Motora"
                font_size: "18sp"
                size_hint: None, None
                width: root.width*.9
                height: root.height*.25
                pos_hint: {"center_x": .5}
                on_press: app.sm.current = "AplicacaoI"



<ScreenPreparacao>
    MDNavigationLayout:

        ScreenManager:
   
            MDScreen:   
                MDBoxLayout:
                    orientation: "vertical"

                    MDToolbar:
                        title: "Voar"
                        icon: "git"
                        left_action_items: [["arrow-left", lambda x: root.Return()],["menu", lambda x: nav_drawer.set_state("open")]]
                        right_action_items: [["git", lambda x: x]]
                        mode: "end"
                    
                    MDBoxLayout:
                        padding: 20
                        spacing: 10
                        adaptive_height: True
                        orientation: "vertical"
                        
                        MDTextField:
                            id: frase1
                            hint_text: "Frase 1"
                            mode: "rectangle"
                    
                        MDTextField:
                            id: frase2
                            hint_text: "Frase 2"
                            mode: "rectangle"
                    
                        MDTextField:
                            id: frase3
                            hint_text: "Frase 3"
                            mode: "rectangle"
                            
                        MDLabel:
                            text: "Sequencia:"
                            halign: "center"
                            font_size: 21
                            
                        Toggle:
                            id: sequencia
                            cols: 4
                            spacing: 10
                            padding: 20
                            adaptive_size: True
                            pos_hint: {"center_x":.5}
                        
                            MDFillRoundFlatButton:
                                text: "A"
                                md_bg_color: app.theme_cls.primary_light
                                on_press: sequencia.onClick(self)

                            MDFillRoundFlatButton:
                                text: "B"
                                md_bg_color: app.theme_cls.primary_light
                                on_press: sequencia.onClick(self) 
                        
                            MDFillRoundFlatButton:
                                text: "C"
                                md_bg_color: app.theme_cls.primary_light
                                on_press: sequencia.onClick(self)

                        MDLabel:
                            id: error
                            text: ""
                            halign: "center"
                            font_size: 14
                            theme_text_color: "Error"
 
                    AnchorLayout:
                        anchor_x: 'right'
                        anchor_y: 'bottom'
                        padding: 10
                
                        MDRaisedButton:
                            id: continuar
                            text: "Salvar"
                            on_press: root.Save()
                                
                        
        ContentNavigationDrawer:
            id: nav_drawer
            md_bg_color: utils.get_color_from_hex("#f7f4e7")



